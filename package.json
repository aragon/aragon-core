{
  "name": "@aragon/core",
  "version": "2.0.1",
  "description": "Core contracts for Aragon",
  "scripts": {
    "test": "npm run parity:dev && truffle test --network development",
    "lint": "solium --dir ./contracts",
    "coverage": "npm run geth:coverage && node_modules/.bin/solidity-coverage",
    "console": "node_modules/.bin/truffle console",
    "geth:dev": "GETH_CLIENT=geth scripts/testrpc.sh",
    "geth:coverage": "SOLIDITY_COVERAGE=true GETH_CLIENT=geth scripts/testrpc.sh",
    "parity:dev": "GETH_CLIENT=parity scripts/testrpc.sh",
    "parity:coverage": "SOLIDITY_COVERAGE=true GETH_CLIENT=parity scripts/testrpc.sh",
    "migrate:dev": "npm run geth:dev && npm run migrate:dev:contracts",
    "migrate:dev:contracts": "truffle migrate --all --network rpc;",
    "generate:artifacts-dev": "npm run migrate:dev; truffle exec --network rpc scripts/generate_artifacts.js"
  },
  "files": [
    "index.js",
    "build/",
    "artifacts/",
    "contracts/",
    "truffle-config.js"
  ],
  "author": "Aragon Institution MTU <contact@aragon.one>",
  "contributors": [
    "Jorge Izquierdo <jorge@aragon.one>"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eth-ens-namehash": "^2.0.0",
    "ethereumjs-abi": "^0.6.4",
    "ganache-cli": "^6.0.3",
    "mocha-lcov-reporter": "^1.3.0",
    "solidity-coverage": "^0.3.5",
    "solium": "^1.0.4",
    "truffle": "^3.4.9",
    "truffle-config": "^1.0.2",
    "truffle-hdwallet-provider": "0.0.3"
  }
}
